<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <%= form_tag root_path, :method => :get do %>
      <%= text_field_tag :search, params[:search], :class => "form-control" %>
      <div class="row">
        <div class="col-sm-6">
          <%= submit_tag "Search Reminders", :name => nil, :class =>"btn btn-md btn-primary" %>
        </div>
        <div class="col-sm-4 col-sm-offset-2">
          <%=link_to "Clear Search", root_path, :class => "btn btn-sm btn-danger" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <h3>Reminders: <%= current_user.reminders.count %></h3>
    <% if @reminder_items.any? %>
      <ol class="reminders">
        <%= render partial: "reminders/reminder", collection: @reminder_items %>
      </ol>
    <% else %>
      <h3>No reminders yet!</h3>
    <% end %>
  </div>
</div>
