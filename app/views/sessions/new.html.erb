<div class ="container-fluid">
  <div class="row-fluid">
    <div class="col-xs-10 col-xs-offset-1 col-sm-4 col-sm-offset-4">
      <h1>Sign in</h1>
        <%= form_for(:session, url: sessions_path) do |f| %>

          <%= f.label :email %>
          <%= f.text_field :email, :class => "signup-form" %>

          <%= f.label :password %>
          <%= f.password_field :password, :class => "signup-form" %>

          <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block", id: "signup-button" %>
        <% end %>

        </br> <p> New user? <%= link_to "Sign up now!", signup_path %></p>
    </div>
  </div>
</div>
